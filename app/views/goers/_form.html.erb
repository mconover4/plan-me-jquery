<div class="row uniform 50%">
  <div class="6u 12u$(xsmall)">
		<%= form_for @goer do |f| %>

			<%= f.label :name %>
			<%= f.text_field :name, placeholder: "Name" %>

			<%= f.label :email %>
			<%= f.text_field :email, placeholder: "Email" %>

			<%= f.label :password %>
			<%= f.password_field :password, placeholder: "A good one" %>

			<%= f.label :personality, "What is your travel personality?" %>
			<%= f.select :personality, [['Adventurous'], ['Romantic'], ['Intellectual']] %>

			<%= f.label :reason, "What is the reason for this trip?" %>
			<%= f.select :reason, [['Honeymoon'], ['Family Trip'], ['Cleansing Time'], ['For Fun'], ['For Tourism']] %>

			<%= f.label :budget, "What is your budget?" %>
			<%= f.select :budget, [['$1,000'], ['$5,000'], ['$7,000'], ['$10,000']] %>

			<%= f.label :companion, "How many people are you bringing?" %>
			<%= f.text_field :companion %>
			<br><br>
			<input type="checkbox" id="international" name="international">
			<label for="international">Are you willing to travel outside of the U.S.?</label>
  		<br>
			<ul class="actions">
				<li><%= f.submit "Make me a Goer" %></li>
				<li><%= link_to("Nvm, I'm a Planner", new_planner_path, class: "button alt") %></li>
			</ul>
		<% end %>
	</div>
</div>
