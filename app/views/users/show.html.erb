<section id="main" class="wrapper">
	<div class="container">
		<div class="row">
  		<div class="6u 12u$(xsmall)">
    		<h2> <%= @user.name %></h2>
				<h4>The Specs</h4>
				<ul class="alt">
					<li><strong> Role: </strong><%= @user.role.upcase %></li>
					<li><strong> Type: </strong><%= @user.personality %></li>
					<li><strong> Motif: </strong><%= @user.reason %></li>
          <li><strong> Budget: </strong><%= @user.budget %>
          <li><strong> Companion(s): </strong><%= @user.companion %>
					<li><strong> Global? </strong> <%= @user.international %></li>
					<li><strong> Contact: </strong><%= @user.email %></li>
				</ul>
					<%= link_to("dashboard", users_path, class: 'button alt') %>
					<% if current_user.role == 'planner'%>
						<%= link_to("Trip.me", new_trip_path, class: 'button alt') %>
					<% end %>
					<br><br>
						<% if current_user.id == @user.id %>
		 					<%= link_to("Edit Profile", edit_user_path(@user)) %>
						<% end %>

			</div>
    	<div class="6u 12u$(xsmall)">
      	<div class="image fit">
        	<img src="https://images.unsplash.com/photo-1496950866446-3253e1470e8e?w=750" alt="">
    		</div>
			</div>
				<div class="6u 12u$(xsmall)">
					<% if @user.role == 'planner'%>
					<h3> Trips by <%= @user.name %></h3>
					<% @user.trips.each do |trip| %>
						<h4><strong>「<%= link_to trip.name.capitalize, trip_path(trip) %>」</strong> <em>under:</em>
					  	<% trip.categories.each do |category| %>
								「<%= link_to category.name, category_path(trip.category_ids) if trip.category_ids %>」
					  	<% end %>
						</h4>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
</section>
