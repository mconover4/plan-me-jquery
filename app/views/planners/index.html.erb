<section id="main" class="wrapper">
	<div class="container">
  <br><br>
	<!-- Table -->
	<section>
  	<h4>Our Planners</h4>
		<div class="table-wrapper">
			<table>
				<% @planners.each do |planner| %>
				<thead>
					<tr>
						<th>Name</th>
						<th>Type</th>
						<th>Motif</th>
            <th>Scope</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><%= link_to planner.name, planner_path(planner) %></td>
						<td><%= planner.personality%></td>
						<td><%= planner.reason %></td>
            <td><% if planner.international == true %>
							 Global	<% else %> U S
							<% end %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</section>
	<% end %>
	</div>
</section>
