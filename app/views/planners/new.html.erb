<%= form_for @planner do |f| %>
<%= f.label :email %><br>
<%= f.text_field :email %><br>

<%= f.label :password %><br>
<%= f.password_field :password %><br>

<%= f.label :personality %><br>
<%= f.select :personality, [['Adventurous'], ['Romantic'], ['Intellectual']] %><br>

<%= f.label :reason %><br>
<%= f.select :reason, [['Honeymoon'], ['Family Trip'], ['Cleansing Time'], ['For Fun'], ['For Tourism']] %><br>

<%= f.label :check_if_international %>
<%= f.check_box :international %><br>

<%= f.submit "Register as a Planner" %><br>
<% end %>
